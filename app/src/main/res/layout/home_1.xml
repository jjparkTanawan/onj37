<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeActivity1">


    <TableRow
        android:id="@+id/tableRow126"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#1B949797" />

    </TableRow>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginTop="20dp"
        android:background="#00EFF2F3"
        android:numColumns="2"></GridView>


    <TableRow
        android:id="@+id/tableRow111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E200BCD4">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#00F8F2F2"
            app:srcCompat="@drawable/ic_home_black_24dp" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/list_w2_24dp"
            android:onClick="tojoblist"/>

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            android:onClick="tononticication"/>


        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:onClick="topersonpage"/>


    </TableRow>

</LinearLayout>
